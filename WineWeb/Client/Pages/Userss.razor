@page "/users"
@using System.Net.Http.Json;
@using WineWeb.Shared.Entities;
@inject HttpClient Http

<PageTitle>UsersManagement</PageTitle>

<h3> UsersManagement</h3>

<h4 style="color:blue;">
    Wants to Add New Employee? Click on <a href="/employee/create">Add Employee</a>
</h4>
<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Full Name</th>
            <th>Username</th>
            <th>Password</th>
            <th>CreateDate</th>
            <th>UpdateDate</th>
        </tr>
    </thead>
    <tbody>
        @if (@users == null)
        {
            <tr>
                <td colspan="8" align="center">No Data Found</td>
            </tr>
        }
        else
        {
            @foreach (var users in @users)
            {
                <tr>
                    <td width="10%">@users.Code</td>
                    <td width="25%">@users.Name</td>
                    <td width="10%">@users.UserName></td>
                    <td width="15%">@users.Password</td>
                    <td width="15%">@users.CreateDate?.ToShortDateString()</td>
                    <td width="10%">@users.UpdateDate?.ToShortDateString()</td>

                </tr>
            }
        }
    </tbody>
</table>

@code {
    private Users[]? users;

    protected override async Task OnInitializedAsync()
    {
        await this.FetEmployees();
    }

    private async Task FetEmployees()
    {
        users = await Http.GetFromJsonAsync<Users[]>("/api/User/getuserss");
    }
}